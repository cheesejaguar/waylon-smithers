{
  "name": "waylon-smithers",
  "version": "0.1.0",
  "description": "Waylon Smithers loop wrapper for Codex CLI non-interactive mode",
  "bin": {
    "waylon-smithers": "bin/waylon-smithers.js"
  },
  "main": "src/cli.js",
  "scripts": {
    "start": "node bin/waylon-smithers.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --reporters=default --reporters=jest-junit"
  },
  "dependencies": {
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 79,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "license": "MIT"
}
